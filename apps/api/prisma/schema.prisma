generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id              String            @id @default(cuid())
  name            String
  slug            String            @unique
  keycloakRealmId String            @unique
  users           User[]
  financialData   FinancialRecord[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  fullName   String
  role       Role     @default(ANALYST)
  tenantId   String
  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model FinancialRecord {
  id           String      @id @default(cuid())
  tenantId     String
  tenant       Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  periodStart  DateTime
  periodEnd    DateTime
  revenue      Decimal     @db.Decimal(14, 2)
  expenses     Decimal     @db.Decimal(14, 2)
  netProfit    Decimal     @db.Decimal(14, 2)
  source       DataSource
  createdAt    DateTime    @default(now())

  @@index([tenantId, periodStart])
}

model ReportArchive {
  id         String   @id @default(cuid())
  tenantId   String
  fileName   String
  s3Key      String   @unique
  uploadedBy String
  createdAt  DateTime @default(now())

  @@index([tenantId, createdAt])
}

enum Role {
  OWNER
  CFO
  ANALYST
  VIEWER
}

enum DataSource {
  ERP
  POS
  MANUAL
  BANK
}
